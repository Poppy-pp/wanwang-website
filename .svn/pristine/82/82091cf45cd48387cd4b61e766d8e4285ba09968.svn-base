    <script>
      $('a.info').tooltip();

      new WOW().init();

      // 新闻中心弹窗
      function showDetail(content,title){
          var contents = "",titles = "";
          contents += "<div> " + content + " </div>";
          $("#detailsContent").html(contents);

          titles += "<h4>" + title + "</h4>";
          $("#myModalLabel").html(titles);
      }

      // 处理时间
      function formatTime(val) {
            if (val != null) {
                    var date = new Date(val);
                    return date.getFullYear() + '-' + (date.getMonth() + 1) + '-' + date.getDate() + ' ' + date.getHours() + ':' + date.getMinutes();
                }
      }

    </script>


    <!-- 判断ie浏览器 -->
    <script type="text/javascript">
      if(navigator.appName == "Microsoft Internet Explorer"&&parseInt(navigator.appVersion.split(";")[1].replace(/[ ]/g, "").replace("MSIE","")) < 8){
          alert("您的浏览器版本过低，请下载IE8及以上版本，或更换浏览器！");
          window.close();
      }
    </script>

    <!-- 新闻接口 -->
    <script type="text/javascript">
      $(function(){
         $.ajax({
                  url: "http://192.168.0.185:8000/api/oa/zhNewsInfo",
                  type: "get",
                  dataType: "jsonp", //解决跨域
                  data:{
                    companyname:'万网'
                  },
                  success: function (data) {
                      var html = "";
                      for(var i=0;i<data.length;i++){    //遍历data数组
                             var ls = data[i];
                             html += "<div class='blog-left wow fadeInLeft'><div class='blog-img'> <img src='"+ls.img_url+"' /></div><div class='blog-content'> <h3>"+ls.title+"</h3><p>"+ls.digest+"</p><p style='color:#C9C9C9;'>"+formatTime(ls.server_update_time)+"</p></div><button class='btn btn-primary btnDetail' data='"+ls.content+"' title='"+ls.title+"' data-toggle='modal' data-target='#myModal'>"+'查看详情'+" </button></div>";
                         }
                         $("#newsdiv").html(html); //在html页面id=newsdiv的标签里显示html内容

                         // 查看详情点击传参
                         $("button.btnDetail").on("click",function(e){
                                showDetail($(this).attr("data"),$(this).attr("title"));
                         })
                  },
         })
      });
    </script>

